{
  "name": "line-demo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev:frontend": "pnpm --filter @line-demo/frontend dev",
    "dev:shared": "pnpm --filter @line-demo/shared dev",
    "dev": "pnpm run dev:shared & pnpm run dev:frontend",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "prettier": "^3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5"
  },
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
